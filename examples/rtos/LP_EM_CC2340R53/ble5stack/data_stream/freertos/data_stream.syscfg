/*
 *  data_stream.syscfg
 */

/* ======== BLE ======== */
ble.deviceRole = "PERIPHERAL_CFG";
ble.deviceName = "Data Stream";

ble.bondPairing = "GAPBOND_PAIRING_MODE_WAIT_FOR_REQ";

// Removem more 16-bit UUIDs
ble.advSet1.advData1.GAP_ADTYPE_16BIT_MORE = false;

// More 16-bit UUIDs available
ble.advSet1.advData1.GAP_ADTYPE_128BIT_MORE = true;
ble.advSet1.advData1.numOfUUIDs128More = 1;
ble.advSet1.advData1.UUID0128More = system.utils.bigInt("00000000000000B000405104C0C000F0",16);
ble.maxNumPrepareWrites = 10;

// Add Health Toolkit checkbox
ble.hideHealthToolkit = false;
